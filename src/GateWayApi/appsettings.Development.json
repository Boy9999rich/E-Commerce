{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "user_route": {
        "ClusterId": "user_cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "auth_route": {
        "ClusterId": "user_cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "product_route": {
        "ClusterId": "product_cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        }
      },
      "order_route": {
        "ClusterId": "order_cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        }
      },
      "paymentRoute": {
        "ClusterId": "paymentCluster",
        "Match": {
          "Path": "/api/payment/{**catch-all}"
        }
      },
      "notificationRoute": {
        "ClusterId": "notificationCluster",
        "Match": {
          "Path": "/api/notification/{**catch-all}"
        }
      }
    },


    "Clusters": {
      "user_cluster": {
        "Destinations": {
          "user1": {
            "Address": "http://localhost:5048/"
          }
        }
      },
      "product_cluster": {
        "Destinations": {
          "product1": {
            "Address": "http://localhost:5052/"
          }
        }
      },
      "order_cluster": {
        "Destinations": {
          "order1": {
            "Address": "http://localhost:5056/"
          }
        }
      },
      "paymentCluster": {
        "Destinations": {
          "paymentDestination": {
            "Address": "https://localhost:5121"
          }
        }
      },
      "notificationCluster": {
        "Destinations": {
          "notificationDestination": {
            "Address": "https://localhost:5255"
          }
        }
      }
    }
  },
  "Jwt": {
    "Key": "23f926fb-dcd2-49f4-8fe2-992aac18f08f",
    "Issuer": "http://E-Commerce.uz",
    "Audience": "E-Commerce-client"
  }
}
